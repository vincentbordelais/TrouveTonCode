    <form>
        <div class="form-group pt-2">
            <label for="formGroupExampleInput" class="question">Posez votre question en utilisant quelques mots clés :</label>
            <input type="text" class="form-control" name="search" id="formGroupExampleInput" placeholder="Exemple : comment écrire un commentaire en twig ?">
            <div class="my-2">
                <button type="submit" class="btn btn-primary">Envoyer</button>
            </div>
        </div>
    </form>
    <ul class="articlesList">
    {% for article in articles %}
        <p class="articlesId">Article {{ article.0.id }} du {{ article.0.creationDate | date ('d/m/Y') }} : </p>
        <li><pre><code>{{ article.0.snippet }}</code></pre></li>
        <li><pre>{{ article.0.description }}</pre></li>




    {% endfor %}
    </ul>


    <div class="p-3 mx-auto text-center">
        <h3 class="display-6">Nos mots clés :</h3>
        <ul>
            {% for tag in tags %}
                <span class="ourTags"> #{{ tag.name }}</span>
            {% endfor %}
        </ul>
